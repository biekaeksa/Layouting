<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="codelabs.co.id.profil.MainActivity">



    <RelativeLayout
        android:id="@+id/atas"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_below="@+id/atas_1"
        android:background="@drawable/background">
        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/camera_icon"/>

        <ImageView
            android:id="@+id/img_profil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/friends_picture"
            android:layout_marginTop="@dimen/activity_vertical_margin"/>


        <TextView
            android:id="@+id/text_nam"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/nama"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/img_profil"
            android:textColor="@android:color/white"/>

        <Button
            android:id="@+id/btn_follow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/follow"
            android:layout_below="@+id/img_profil"
            android:layout_marginTop="40dp"
            android:background="@android:color/darker_gray"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="340dp"
        android:layout_height="225dp"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_below="@+id/atas"
        android:background="@android:color/darker_gray"
        android:layout_marginLeft="@dimen/activity_horizontal_margin">


        <ImageView
            android:id="@+id/img_call"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:src="@drawable/call"
            />

        <TextView
            android:id="@+id/txt_hp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_hp"
            android:layout_toRightOf="@+id/img_call"
            android:textSize="30dp"
            android:textColor="@android:color/white"
            android:layout_marginTop="33dp"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"/>


        <ImageView
            android:id="@+id/img_msg"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/message"
            android:layout_below="@+id/img_call"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/img_msg"
            android:text="@string/email"
            android:layout_below="@+id/txt_hp"
            android:layout_marginTop="65dp"
            android:textSize="30dp"
            android:textColor="@android:color/white"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            />
    </RelativeLayout>



</RelativeLayout>


